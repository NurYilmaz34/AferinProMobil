<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/settings_background"
        android:contentDescription="@string/linearLayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageSettingsType"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            app:srcCompat="@drawable/settings_outline" />

        <TextView
            android:id="@+id/SettingsType"
            android:layout_width="330dp"
            android:layout_height="fill_parent"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:text="SettingsArea"
            android:textAlignment="textStart"
            android:textColor="@color/settings_textcolor"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/NextImage"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            app:srcCompat="@drawable/next" />


    </LinearLayout>


</LinearLayout>